<% content_for :title, "Login" %>

<div class="min-h-screen bg-gray-100 flex items-center justify-center py-12 px-4">
  <div class="max-w-md w-full space-y-8">
    <!-- Header -->
    <div class="text-center">
      <div class="mx-auto w-20 h-20 bg-indigo-600 rounded-full shadow-lg flex items-center justify-center mb-6">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
        </svg>
      </div>
      <h2 class="text-center text-3xl font-extrabold text-gray-900">
        Welcome Back!
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Sign in to your Universal Links account
      </p>
    </div>

    <!-- Login Form -->
    <div class="bg-white py-8 px-6 shadow-xl rounded-lg sm:px-10">
      <%= form_with url: login_path, local: true, class: "space-y-6" do |form| %>
        <div>
          <%= form.label :email, "Email address", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.email_field :email, 
                class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", 
                placeholder: "Enter your email", 
                required: true %>
          </div>
        </div>

        <div>
          <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.password_field :password, 
                class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", 
                placeholder: "Enter your password", 
                required: true %>
          </div>
        </div>

        <div style="margin: 20px 0;">
          <%= form.submit "ðŸ”‘ SIGN IN", 
              class: "w-full font-semibold py-3 px-4 rounded-lg text-lg cursor-pointer",
              style: "background-color: #3B82F6 !important; color: white !important; border: 3px solid #1D4ED8 !important; font-size: 18px !important; padding: 15px !important; width: 100% !important; border-radius: 8px;" %>
        </div>
      <% end %>

      <!-- Divider -->
      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300" />
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-500">Or</span>
          </div>
        </div>
      </div>

      <!-- Sign up link -->
      <div class="mt-6 text-center">
        <p class="text-sm text-gray-600">
          Don't have an account?
          <%= link_to register_path, class: "font-medium text-indigo-600 hover:text-indigo-500" do %>
            Create one now
          <% end %>
        </p>
      </div>
    </div>

    <!-- Demo Credentials -->
    <div class="bg-blue-50 border border-blue-200 rounded-md p-4">
      <div class="text-center">
        <h3 class="text-sm font-medium text-blue-800 mb-2">ðŸŽ¯ Demo Credentials</h3>
        <div class="text-sm text-blue-700 space-y-1">
                  <p><strong>Email:</strong> demo@utilsawesome.com</p>
        <p><strong>Password:</strong> admin123</p>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <div class="text-center">
      <p class="text-sm text-gray-500">
        ðŸ”— Universal Links - Smart URL redirection platform
      </p>
    </div>
  </div>
</div>
