                  <%= ios_form.url_field :app_store_url, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm", placeholder: "https://apps.apple.com/..." %>
