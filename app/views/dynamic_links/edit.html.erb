                <%= web_form.url_field :desktop_url, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 text-sm", placeholder: "https://myapp.com/desktop" %>
              </div>
              <div>
