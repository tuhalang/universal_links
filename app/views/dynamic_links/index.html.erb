<% content_for :title, "Dashboard" %>

<div class="space-y-8">
  <!-- Hero Header -->
  <div class="bg-blue-600 rounded-lg shadow-lg">
    <div class="px-8 py-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-white mb-2">
            🚀 Dynamic Links Dashboard
          </h1>
          <p class="text-lg text-blue-100">
            Create smart links that adapt to any platform
          </p>
        </div>
        <div class="hidden lg:block">
          <%= link_to new_dynamic_link_path, class: "bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold shadow hover:shadow-lg" do %>
            ➕ Create New Link
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <!-- Total Links Card -->
    <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-blue-500">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Total Links</p>
          <p class="text-2xl font-bold text-gray-900"><%= @total_links %></p>
        </div>
        <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
          <span class="text-2xl">🔗</span>
        </div>
      </div>
    </div>

    <!-- Total Clicks Card -->
    <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-green-500">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Total Clicks</p>
          <p class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@total_clicks) %></p>
        </div>
        <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
          <span class="text-2xl">📊</span>
        </div>
      </div>
    </div>

    <!-- Active Links Card -->
    <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-yellow-500">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Active Links</p>
          <p class="text-2xl font-bold text-gray-900"><%= @dynamic_links.active.count %></p>
        </div>
        <div class="w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center">
          <span class="text-2xl">📱</span>
        </div>
      </div>
    </div>

    <!-- Clicks Today Card -->
    <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-purple-500">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Clicks Today</p>
          <p class="text-2xl font-bold text-gray-900"><%= Click.where(clicked_at: Date.current.beginning_of_day..Date.current.end_of_day).count %></p>
        </div>
        <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center">
          <span class="text-2xl">🚀</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Links Section -->
  <div class="bg-white rounded-lg shadow-lg overflow-hidden">
    <!-- Header -->
    <div class="bg-gray-50 px-6 py-4 border-b">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h2 class="text-xl font-bold text-gray-900">Your Dynamic Links</h2>
          <p class="text-gray-600">Manage and track performance</p>
        </div>
        <div class="mt-3 sm:mt-0">
          <%= link_to new_dynamic_link_path, class: "bg-blue-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-blue-700" do %>
            ➕ Create New Link
          <% end %>
        </div>
      </div>
    </div>

    <!-- Links Content -->
    <% if @dynamic_links.any? %>
      <div class="divide-y divide-gray-200">
        <% @dynamic_links.each do |link| %>
          <div class="p-6 hover:bg-gray-50">
            <div class="flex items-center justify-between">
              <!-- Left side: Link info -->
              <div class="flex items-center space-x-4">
                <!-- Status badge -->
                <div>
                  <% if link.active? %>
                    <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded-full">
                      ● Active
                    </span>
                  <% else %>
                    <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded-full">
                      ● Inactive
                    </span>
                  <% end %>
                </div>

                <!-- Link details -->
                <div>
                  <div class="flex items-center space-x-3 mb-1">
                    <h3 class="text-lg font-semibold text-gray-900">
                      <%= link.title %>
                    </h3>
                    <!-- Platform badges -->
                    <div class="flex space-x-1">
                      <% if link.ios_config.present? %>
                        <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded">
                          📱 iOS
                        </span>
                      <% end %>
                      <% if link.android_config.present? %>
                        <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded">
                          🤖 Android
                        </span>
                      <% end %>
                      <% if link.web_config.present? %>
                        <span class="bg-purple-100 text-purple-800 text-xs px-2 py-1 rounded">
                          💻 Web
                        </span>
                      <% end %>
                    </div>
                  </div>
                  
                  <!-- Short URL -->
                  <div class="flex items-center space-x-2">
                    <code class="bg-gray-100 text-gray-700 text-sm px-2 py-1 rounded">
                      <%= link.short_url %>
                    </code>
                    <button onclick="copyToClipboard('<%= link.short_url %>', this)" 
                            class="text-blue-600 hover:text-blue-800 text-sm">
                      📋 Copy
                    </button>
                    <span class="text-sm text-gray-500">
                      • <%= time_ago_in_words(link.created_at) %> ago
                    </span>
                  </div>
                </div>
              </div>

              <!-- Right side: Stats and actions -->
              <div class="flex items-center space-x-6">
                <!-- Click stats -->
                <div class="text-center">
                  <div class="text-2xl font-bold text-gray-900">
                    <%= number_with_delimiter(link.total_clicks) %>
                  </div>
                  <div class="text-sm text-gray-500">clicks</div>
                </div>

                <!-- Action buttons -->
                <div class="flex space-x-2">
                  <%= link_to link, class: "bg-blue-100 text-blue-700 px-3 py-1 rounded text-sm font-medium hover:bg-blue-200" do %>
                    👁 View
                  <% end %>
                  
                  <%= link_to edit_dynamic_link_path(link), class: "bg-green-100 text-green-700 px-3 py-1 rounded text-sm font-medium hover:bg-green-200" do %>
                    ✏️ Edit
                  <% end %>
                  
                  <%= link_to analytics_dynamic_link_path(link), class: "bg-purple-100 text-purple-700 px-3 py-1 rounded text-sm font-medium hover:bg-purple-200" do %>
                    📊 Analytics
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- Empty state -->
      <div class="text-center py-12">
        <div class="text-6xl mb-4">🔗</div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">No dynamic links yet</h3>
        <p class="text-gray-600 mb-6">
          Create your first smart link that works across all platforms
        </p>
        <%= link_to new_dynamic_link_path, class: "bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700" do %>
          ➕ Create Your First Link
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<script>
function copyToClipboard(text, button) {
  navigator.clipboard.writeText(text).then(function() {
    const originalText = button.textContent;
    button.textContent = '✅ Copied!';
    button.classList.add('text-green-600');
    
    setTimeout(() => {
      button.textContent = originalText;
      button.classList.remove('text-green-600');
    }, 2000);
  });
}
</script>
